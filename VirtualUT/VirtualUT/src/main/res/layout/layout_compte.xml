<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icone"
        android:background="@drawable/textlines"
        android:src="@drawable/ic_profil_nom"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNom"
        android:textSize="25dp"
        android:background="@drawable/textlines"
        android:layout_toRightOf="@+id/icone"
        android:layout_above="@+id/textViewSolde"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solde au 01/01/12: "
        android:id="@+id/textViewSolde"
        android:background="@drawable/textlines"
        android:paddingLeft="80dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:paddingRight="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/icone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/textlines"
        android:id="@+id/textViewCredit"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:paddingRight="10dp"
        android:textColor="#59ab39"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textViewSolde"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewSolde"
        android:layout_below="@+id/icone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trier par date"
        android:id="@+id/buttonTriDate"
        android:layout_below="@id/textViewSolde"
        android:layout_marginLeft="10dp"
        style="@style/btnStyleBeige"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trier par montant"
        android:id="@+id/buttonTriMontant"
        android:layout_below="@id/textViewSolde"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        style="@style/btnStyleBeige"/>

</RelativeLayout>