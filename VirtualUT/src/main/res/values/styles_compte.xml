<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main menu button -->
    <style name="MainMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">0dp</item>
    </style>
    <style name="MainMenuActive" parent="MainMenu">
        <item name="android:background">@drawable/main_menu_button_active</item>
    </style>

    <!-- Submenu button -->
    <style name="Submenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/submenu_background</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="SubmenuActive" parent="Submenu">
        <item name="android:background">@color/submenu_active_line</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>